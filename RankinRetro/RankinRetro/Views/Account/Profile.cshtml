@using RankinRetro.ViewModels
@using RankinRetro.Data.Enum

@model ProfileViewModel

<div class="row">
    <div class="col-md-8 offset-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <p>@Model.Email</p>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
            <p>@Model.FirstName</p>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
            <p>@Model.Surname</p>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
            <p>@Model.Title</p>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
            <p>@Model.Gender</p>
            </div>
            <div class="form-group">
                <label asp-for="AddressFirstline" class="control-label"></label>
            <p>@Model.AddressFirstline</p>
            </div>
            <div class="form-group">
                <label asp-for="CityTown" class="control-label"></label>
            <p>@Model.CityTown</p>
            </div>
            <div class="form-group">
                <label asp-for="AddressSecondline" class="control-label"></label>
            <p>@Model.AddressSecondline</p>
            </div>
            <div class="form-group">
                <label asp-for="AddressPostcode" class="control-label"></label>
            <p>@Model.AddressPostcode</p>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
            <p>@Model.Phone</p>
            </div>

        <a type="btn btn-warning" asp-controller="Account" asp-action="Edit">Edit Profile</a>
            

        
    </div>
</div>

